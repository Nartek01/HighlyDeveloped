@inherits Umbraco.Web.Mvc.UmbracoViewPage
@using ClientDependency.Core.Mvc
@{
    Layout = null;

    @*
    * Vi använder oss utav Umbraco's egna "Model builder" funktionalitet för att referera till ett klass som har blivit skapad för
    * våran dokument typ.
    *@
}
<html lang="en">
<head>
    @{

        Html.RequiresCss("https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css", 1, new
        {
            integrity = "sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm",
            crossorigin = "anonymous"
        });

        Html.RequiresCss("https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css", 2, new
        {
            rel = "stylesheet",
            crossorigin = "anonymous",
            integrity = "sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==",
            referrerpolicy = "no-referrer"
        });

        Html.RequiresCss("/css/CookieConsent.css", 3);

        Html.RequiresJs("https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js", 1, new
        {
            crossorigin = "anonymous",
            referrerpolicy = "no-referrer"
        });

        Html.RequiresJs("https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js", 2, new
        {
            integrity = "sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q",
            crossorigin = "anonymous"
        });

        Html.RequiresJs("https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js", 3, new
        {
            integrity = "sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl",
            crossorigin = "anonymous"
        });

        Html.RequiresJs("/scripts/CookieConsent.js", 4);

    }
    @Html.RenderCssHere()
</head>
@Html.Partial($"NavBar")
<body>
@RenderBody()
    <div class="alert text-center cookiealert" role="alert">
        <b>Do you like cookies?</b> &#x1F36A; We use cookies to ensure you get the best experience on our website. <a href="#" target="_blank">Learn more</a>
        <button type="button" class="btn btn-primary btn-sm acceptcookies">
            I agree
        </button>
    </div>
@Html.Partial("Footer")
@Html.RenderJsHere()
    <script>
        window.addEventListener("cookieAlertAccept", function () {
            alert("cookies accepted")
        })
    </script>
</body>
</html>

